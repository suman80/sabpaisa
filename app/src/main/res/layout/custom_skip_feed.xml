<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/linearLayout_feed"
    android:clickable="true"
    android:gravity="center">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/rippleClick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">

        <LinearLayout
            android:id="@+id/rl_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="10dp"
                android:id="@+id/fab"
                android:background="@color/white"
                android:layout_margin="10dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/client_Logo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    />

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/people_name_initial"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >


                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/main_feed_name"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Group Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold"
                        android:selectAllOnFocus="false"
                        android:maxLines="3"
                        autofit:minTextSize="12sp"
                        />



                    <!--Visibility gone-->

                    <RelativeLayout
                        android:id="@+id/relativeLayoutNotification"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/ic_ring" />

                        <ImageView
                            android:id="@+id/notificationBadge"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/badge_bg_with_shadow"
                            android:layout_alignParentRight="true"
                            android:textAlignment="center"
                            />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/notificationText"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignParentRight="true"
                            android:maxLines="1"
                            android:text="100"
                            android:textColor="#fff"
                            android:textSize="8sp"
                            android:gravity="center"
                            />


                    </RelativeLayout>





                    <!--Visibility gone-->
                    <ImageView
                        android:id="@+id/imgPopUpMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_more_vert"
                        android:visibility="gone" />






                </LinearLayout>


                <me.grantland.widget.AutofitTextView
                    android:id="@+id/main_feed_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:maxLines="5"
                    android:text="Fractal landscape of Julian set of numbers by Wikimedia Commons user Gertbuschmann public domain here:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_xsmall"
                    app:minTextSize="12sp"
                    android:autoSizeMaxTextSize="14sp"
                    />


            </LinearLayout>


        </LinearLayout>


    </com.balysv.materialripple.MaterialRippleLayout>

</LinearLayout>