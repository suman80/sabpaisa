<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSpaceActivity"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_orange"
        app:titleTextColor="#fff"
        app:title="Add Space"
        >

    </android.support.v7.widget.Toolbar>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/spaceLogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/ic_file_upload"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Space Logo"
                android:layout_gravity="center"
                android:textColor="@color/bg_orange"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5"

            >


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/spaceImg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/ic_file_upload"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Space Image"
                android:layout_gravity="center"
                android:textColor="@color/bg_orange"
                />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Space Name:"
            android:textColor="@color/bg_orange"
            android:textSize="18sp"
            />


        <EditText
            android:id="@+id/spaceNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Space\nDescription:"
            android:textColor="@color/bg_orange"
            android:textSize="18sp"
            />


        <EditText
            android:id="@+id/spaceDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            />



    </LinearLayout>

    <Button
        android:id="@+id/btn_Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_button"
        android:text="Save"
        android:textColor="#fff"
        android:layout_gravity="center"
        />



</LinearLayout>