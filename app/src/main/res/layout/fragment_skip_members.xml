<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SkipMembersFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.cooltechworks.views.shimmer.ShimmerRecyclerView
            android:id="@+id/recycler_view_Member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="40dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutAddMemberWhenNoData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Members"
            android:textSize="18sp"
            android:textColor="@color/bg_orange"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/noDataFound"
        android:visibility="gone">

        <include layout="@layout/no_data_found">

        </include>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelayoutAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_behavior="in.sabpaisa.droid.sabpaisa.Util.BottomNavigationBehavior"
        android:visibility="gone">

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rippleClickAdd"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleHover="true">

            <include
                layout="@layout/bottom_layout_add"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:visibility="visible" />


        </com.balysv.materialripple.MaterialRippleLayout>


    </FrameLayout>

</FrameLayout>
