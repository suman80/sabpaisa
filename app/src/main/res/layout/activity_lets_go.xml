<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.sabpaisa.droid.sabpaisa.LetsGoActivity">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:lottie_fileName="motorcycle.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        />


    <com.shitij.goyal.slidebutton.SwipeButton
        android:id="@+id/slide"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:gradient_color_3="@color/bg_orange"
        app:gradient_color_2="#000"
        app:gradient_color_1="#fff"
        app:threshold="0.7"
        app:swipe_mode="mirror"
        app:gradient_color_2_width="100dp"
        app:after_confirmation_background="@color/bg_orange"
        app:button_confirm_text="Let`s get started"
        app:button_swipe_text="Swipe!!"
        android:layout_gravity="bottom"
        android:layout_margin="20dp"
        android:background="@color/bg_orange"
        android:gravity="center"
        android:text="Swipe Left To Right"
        android:textColor="#FFFFFF"
        />




</FrameLayout>
