<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/people_name_initial"

            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/Group_Logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/Group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Group Name"
                android:textColor="@color/bg_title"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:id="@+id/linerar11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <Button
                    android:id="@+id/joinmember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="#fff"
                    android:text="Join"
                    android:textColor="@color/bg_orange" />
            </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linerar1"
        android:layout_marginTop="8dp"

        android:elevation="50dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Group_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:maxLines="2"
            android:text="Fractal landscape of Julian set of numbers by Wikimedia Commons user Gertbuschmann public domain here:"
            android:textColor="@color/bg_text_color"
            android:textSize="@dimen/text_size_xsmall" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/Group_Image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitXY"/>


    </LinearLayout>



</LinearLayout>
