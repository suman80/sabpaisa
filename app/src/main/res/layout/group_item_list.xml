<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@color/white">



        <com.github.mmin18.widget.FlexLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/Group_Logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_right="20%"
                 />


            <Button
                android:id="@+id/joinmember"
                app:layout_right="95%"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/my_button"
                android:text="Join"
                android:textColor="#fff"
                app:layout_bottom="90%"
                />


    </com.github.mmin18.widget.FlexLayout>


        <TextView
            android:id="@+id/Group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Group Name"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/bg_title"
            android:textSize="@dimen/text_size_small" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linerar1"
        android:layout_marginTop="8dp"

        android:elevation="50dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Group_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:maxLines="2"
            android:text="Fractal landscape of Julian set of numbers by Wikimedia Commons user Gertbuschmann public domain here:"
            android:textColor="@color/bg_text_color"
            android:textSize="@dimen/text_size_xsmall" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/Group_Image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"

            android:scaleType="fitXY"/>


    </LinearLayout>



</LinearLayout>
</android.support.v7.widget.CardView>