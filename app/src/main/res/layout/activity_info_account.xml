<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.sabpaisa.droid.sabpaisa.AccountInfoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_screen"
        app:subtitleTextColor="@color/white"
        app:titleTextColor="@color/white" />
    <!--TODO bankLogo-->
    <ImageView
        android:id="@+id/iv_bankLogo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/test_bank_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Bank account Linked with your mobile number"
        android:textStyle="bold" />

    <!--TODO accountInfo-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Account Information"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Account No"
                android:textSize="18sp"
                android:textStyle="bold" />
            <!--TODO accountNumber-->
            <TextView
                android:id="@+id/tv_accountNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="XXXXXXXX3455"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Account Type"
                android:textSize="18sp"
                android:textStyle="bold" />
            <!--TODO accountType-->
            <TextView
                android:id="@+id/tv_accountType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Saving"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="IFSC Code"
                android:textSize="18sp"
                android:textStyle="bold" />
            <!--TODO accountIFSC-->
            <TextView
                android:id="@+id/tv_accountIFSC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ALLA002312"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <!--TODO mpinInfo-->
    <LinearLayout
        android:id="@+id/ll_mpinInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info_outline_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="6 Digit UPI PIN required for money transfer"
            android:textColor="@color/bg_orange" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mpinInfo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_changeMPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side"
            android:layout_marginTop="@dimen/margin_side"
            android:background="@drawable/background_edittext_black"
            android:text="Change UPI mPIN"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_heading" />

        <TextView
            android:id="@+id/tv_resetMPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side"
            android:layout_marginTop="@dimen/margin_side"
            android:background="@drawable/background_edittext_black"
            android:text="Reset UPI mPIN"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_heading" />

        <TextView
            android:id="@+id/tv_requestBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side"
            android:layout_marginTop="@dimen/margin_side"
            android:background="@drawable/background_edittext_black"
            android:text="Request Balance"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_heading" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--TODO setmPIN-->
        <Button
            android:id="@+id/btn_setmPIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/background_button"
            android:text="SET UPI PIN"
            android:textColor="@color/white" />
    </FrameLayout>

</LinearLayout>
