<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="in.sabpaisa.droid.sabpaisa.TransactionResult">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:background="@color/main_screen_bottom_color"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/test_bank_logo"
            android:layout_marginLeft="10dp" />

        <TextView
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Account No"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!--TODO accountNumber-->
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_accountNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:text="XXXXXXXX3455" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:background="@color/main_screen_bottom_color">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ic_check_circle_black_24dp"
            android:layout_marginLeft="@dimen/margin_side"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr. Gaurav Singh"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_side">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Rs"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_txnAmount"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textSize="14sp"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_message_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Congratulations !!!"
                android:textSize="@dimen/text_size_heading"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_message_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You have succesfully send "
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/iv_message_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_ic_check_circle_black_24dp"
                android:layout_marginTop="50dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
