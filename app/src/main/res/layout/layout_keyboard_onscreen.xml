<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="@color/main_screen_bottom_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="2"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="3"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="4"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="5"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="6"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/text7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="7"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/text8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="8"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/text9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="9"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/textOk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:src="@drawable/ic_check_black_24dp"
                android:text="Back"
                android:textSize="25dp" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/text0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="0"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/textBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:src="@drawable/ic_backspace_black_24dp"
                android:text="OK"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
